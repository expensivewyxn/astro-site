---
import Intro from "../../components/Intro.astro";
import Layout from "../../layouts/Layout.astro";
import styles from "../../styles/pages/About.module.scss";
import "../../styles/fontawesome/fontawesome.scss";
import "../../styles/fontawesome/regular.scss";
---

<Layout title="About">
    <main>
        <Intro />
        <section class={styles.selfIntro}>
            <h2><span>About</span> Me <i class="fa-regular fa-user"/></h2>
            <div class={styles.columns}>
                <div class={styles.col1}>
                    <h3>A random photo</h3>
                </div>
                <div class={styles.col2}>
                    <p>
                        Hi! I am a final year student studying at the Hong Kong University of Science and Technology, majoring in Information Systems in the School of Business. 
                    </p>
                    <br/>
                    <p>
                        I have been developing websites for 3 years now, and I make simple and clean looking websites like this one. So if you ever need a website, maybe I could help you out :D
                    </p>
                </div>
            </div>
        </section>
    </main>
</Layout>
